@using task_53.ViewModels
@model task_53.ViewModels.IndexViewModel

@{
    ViewData["Title"] = "Add new perfume";
}

<form class="form-inline" method="post">
  <div>
    
    <p>
      <label for="brand">Select perfume brand</label>
      <select name="BrandId" id="brand">
        @foreach(Brand brand in Model.Brands)
        {
          <option value="@brand.Id">@brand.Name</option>
        }
      </select>
    </p>

    <p>
      @Html.Label("name", "Enter perfume name")
      @Html.TextBox("name", "Coco Mademoiselle")
    </p>

    <p>
      @Html.Label("volume", "Enter perfume volume")
      @Html.TextBox("volume", "30", new { type="number" } )
    </p>
    
    <p>
      @Html.Label("price", "Enter perfume price")
      @Html.TextBox("price", "7500", new { type="number" } )
    </p>
     
    <p>
      @Html.Label("count", ">Enter perfume count")
      @Html.TextBox("count", "10", new { type="number" } )
    </p>


    <span class="col-md-offset-2 col-md-10">
      <button type="submit" value="Submit" name="Submit">Submit</button>
      <button type="submit" value="Cancel" name="Cancel">Cancel</button>
    </span>
  </div>
</form>