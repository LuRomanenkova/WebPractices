@using task_5.ViewModels
@using task_5.Models
@model task_5.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<form class="form-inline">
    <label>Select brand: </label>
    <select name="brandId" class="form-control">
        @foreach(BrandModel brand in Model.Brands)
        {
            <option value="@brand.Id">@brand.Name</option>
        }
    </select>
    <input type="submit" />
</form>
<br />
<table class="table">
    @foreach (Perfume p in Model.Perfumes)
    {
        <tr><td>@p.Name</td><td>@p.Brand?.Name</td><td>@p.Price</td></tr>
    }
</table>